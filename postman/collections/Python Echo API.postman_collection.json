    {
      "name": "Request Inspection",
      "description": "Endpoints for inspecting incoming request data",
      "item": [
        {
          "name": "Get Headers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Custom-Header",
                "value": "test-value",
                "description": "Example custom header to see in response"
              }
            ],
            "url": "{{baseUrl}}/headers",
            "description": "Returns the incoming request's HTTP headers as JSON. Environment headers (X-Forwarded-*, X-Real-Ip, etc.) are hidden by default unless `show_env` query parameter is provided."
          },
          "response": [
            {
              "name": "Headers Response",
              "originalRequest": {
                "method": "GET",
                "header": [
                  {
                    "key": "X-Custom-Header",
                    "value": "test-value"
                  }
                ],
                "url": "{{baseUrl}}/headers"
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "cookie": [],
              "body": "{\n  \"Host\": \"localhost:5000\",\n  \"User-Agent\": \"PostmanRuntime/7.x\",\n  \"Accept\": \"*/*\",\n  \"X-Custom-Header\": \"test-value\"\n}"
            }
          ]
        }
      ]
    },
